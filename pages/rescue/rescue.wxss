/* pages/rescue/rescue.wxss */

.topblock {
  z-index: -1 !important;
  width: 100%;
  height: 280rpx;
}

.rescue {
  background-color: white;
  position: absolute;
  width: 100%;
  height: auto;
  border-radius: 50rpx;
  margin-top: -50rpx;
  margin-bottom: 150rpx;
}

.rescue-item {
  padding-top: 70rpx;
}

.item-user {
  display: flex;
  align-items: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.user-img {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.user-name {
  padding-left: 20rpx;
  color: rgb(194, 194, 12);
}

.user-time {
  padding-left: 20rpx;
  color: rgb(165, 165, 165);
}

.user-location {
  padding-left: 20rpx;
  font-size: 27rpx;
  color: rgb(165, 165, 165);
}

.item-title {
  width: 90%;
  padding-top: 15rpx;
  padding-left: 40rpx;
  font-size: 40rpx;
}

.item-content {
  width: 90%;
  padding-left: 40rpx;
  padding-top: 15rpx;
}

.item-1-widthFix {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
}

.item-1-widthFix-image {
  width: 90%;
}

.item-1-heightFix {
  padding-top: 20rpx;
  padding-left: 40rpx;
}
.item-2 {
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  padding-top: 20rpx;
}

.item-2-img {
  width: 300rpx;
  height: 300rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.item-many{
  height: auto;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.hoverBtn {
  height: 100rpx;
  width: 100rpx;
  z-index: 1;
  position: fixed;
  bottom: 180rpx;
  right: 50rpx;
  border-radius: 50%;
}

.hoverIcon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60%;

  box-shadow: 2rpx 2rpx 10rpx 3rpx #0265cb;
}